@model Library.ViewModels.Account.LoginVIewModel
<link href="~/css/LoginStyle.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
@{
    Layout = null;
    ViewData["Title"] = "Login";
}


<div class="wrapper fadeInDown" style='background:#C5E1A5'>
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <img src="~/images/logo.png" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form asp-controller="Account" asp-action="login" method="post">
            <input type="text" id="login" class="fadeIn second" asp-for="UserName" /><br />
            <span asp-validation-for="UserName" class="text-danger"></span><br />
            <input type="password" id="password" class="fadeIn third" asp-for="Password" /><br />
            <span asp-validation-for="Password" class="text-danger"></span><br />
            <input type="checkbox" asp-for="RememberMe" />Remember Me<br />
            <input type="submit" class="fadeIn fourth" value="Login">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
        </div>

    </div>
</div>