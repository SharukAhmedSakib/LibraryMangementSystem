<aside class="main-sidebar sidebar-dark-green elevation-4 position-fixed">
    <!-- Brand Logo -->
    <a class="brand-link" asp-controller="Home" asp-action="Index">
        <img src="~/images/logo.png"
             alt="AdminLTE Logo"
             class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">HSL</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/Theme/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@User.Identity.Name</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                with font-awesome or any other icon font library -->
                <li class="nav-item menu-open">
                    <a class="nav-link @Html.IsActive("Home", "Index","")" asp-controller="Home" asp-action="Index">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link @Html.AreBranchesActive("Branch", "Detail")">
                        <i class="nav-icon fas fa-copy"></i>
                        <p>
                            Branches
                            <i class="fas fa-angle-left right"></i>
                            <span class="badge badge-info right">3</span>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Branch", "Detail", "1")" asp-controller="Branch" asp-action="Detail" asp-route-id="1">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Lake Shore Branch</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Branch", "Detail", "2")" asp-controller="Branch" asp-action="Detail" asp-route-id="2">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Mountain View Branch</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Branch", "Detail", "3")" asp-controller="Branch" asp-action="Detail" asp-route-id="3">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Pleasent Hill Branch</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link @Html.IsActive("Patron", "Index", "")" asp-controller="Patron" asp-action="Index">
                        <i class="nav-icon fas fa-chart-pie"></i>
                        <p>
                            Patron
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @Html.IsActive("Catalog", "Index", "")" asp-controller="Catalog" asp-action="Index">
                        <i class="nav-icon fas fa-tree"></i>
                        <p>
                            Catalog
                        </p>
                    </a>
                </li>
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link active menu-open">
                        <i class="nav-icon far fa-plus-square"></i>
                        <p>
                            Extras
                            <i class="fas fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="logout">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Logout</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Html.IsActive("Branch", "Detail", "")" asp-controller="Account" asp-action="Register">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Register</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
